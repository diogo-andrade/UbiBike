<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    tools:context="pt.ulisboa.tecnico.cmov.ubibike.UbibikersFragment">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/near_ubibiker_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toLeftOf="@+id/share_points_btn"
    android:clickable="true">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/sym_def_app_icon"/>
    <TextView
        android:id="@+id/ubibikerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:hint="Name"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingTop="6dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/ubibikerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/ubibikerName"
        android:hint="@string/prompt_email"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>

    <Button
        android:id="@+id/share_points_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:text="Share\nPoints" />

</RelativeLayout>